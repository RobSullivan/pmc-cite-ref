{
  "name": "pmc-cite-ref",
  "version": "1.0.0",
  "description": "A module for collecting references and citations of an article indexed in PubMed.",
  "main": "main.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test-citations && npm run test-refs && npm run test-docs",
    "test-citations": "mocha --ui tdd -R list tests/pipeline/tests/citation.controller.unit.tests.js",
    "test-refs": "mocha --ui tdd -R list tests/pipeline/tests/reference.controller.unit.tests.js",
    "test-docs": "mocha --ui tdd -R list tests/pipeline/tests/document.controller.unit.tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobSullivan/pmc-cite-ref.git"
  },
  "keywords": [
    "research",
    "communication",
    "PubMed",
    "PubMed Central",
    "references",
    "citations"
  ],
  "author": "Robert Sullivan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobSullivan/pmc-cite-ref/issues"
  },
  "homepage": "https://github.com/RobSullivan/pmc-cite-ref#readme",
  "dependencies": {
    "async": "2.0.0-rc.3",
    "eslint": "2.3.0",
    "mofo-style": "2.3.0",
    "request": "2.69.0",
    "xmldoc": "0.5.0"
  }
}
